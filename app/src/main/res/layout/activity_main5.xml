<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".MainActivity5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:weightSum="0.7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:weightSum="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:onClick="ClickMenu"
                android:src="@drawable/three_lines">
            </ImageView>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                >
            </ImageView>
            <ImageView
                android:layout_weight="0.3"
                android:layout_height="50dp"
                android:layout_width="30dp"
                android:src="@drawable/profile"
                >
            </ImageView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:text="Playlists"
                android:textColor="@color/white"
                android:textSize="26dp"></TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"

                android:src="@drawable/playlist">

            </ImageView>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/playlist">

            </ImageView>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/playlist" >

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:weightSum="3"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Playlist 1"
                android:textColor="#FFC107"
                android:textSize="20dp"
                android:textAlignment="center"

                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Playlist 1"
                android:textColor="#FFC107"
                android:textSize="20dp"
                android:textAlignment="center"

                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Playlist 1"
                android:textColor="#FFC107"
                android:textSize="20dp"
                android:textAlignment="center"

                ></TextView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.2"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:paddingLeft="10dp"
                android:text="Artists"
                android:textColor="@color/white"
                android:textSize="26dp"></TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_weight="1"

                android:src="@drawable/artist">

            </ImageView>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/artist">

            </ImageView>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/artist" >

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:weightSum="3"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Artist 1"
                android:textColor="#FFC107"
                android:textSize="20dp"
                android:textAlignment="center"

                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Artist 2"
                android:textColor="#FFC107"
                android:textSize="20dp"
                android:textAlignment="center"

                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Artist 3"
                android:textColor="#FFC107"
                android:textSize="20dp"
                android:textAlignment="center"

                ></TextView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:layout_marginTop="40dp"
            >

            <Button
                android:id="@+id/song_btn"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#FFC107"
                android:background="@color/black"
                android:drawableEnd="@drawable/fast_backward"
                android:drawableRight="@drawable/fast_forward"

                android:text="Song Name"
                android:textAlignment="viewStart"
                android:textColor="#FFC107"

                ></Button>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:weightSum="4"
            android:background="#434141"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/heart"
                ></ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/plus2"
                ></ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/search"
                ></ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/clock"
                ></ImageView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.04"
            android:weightSum="4"
            android:background="#423E3E"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Liked"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listen Later"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                ></TextView>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">
        <include
            layout="@layout/main_nav_drawer">
        </include>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>